---
import Template from "../../layouts/Template.astro"
if(Astro.cookies.has("registration"))return Astro.redirect("../")
else if(!Astro.cookies.has("setup-lang")||!Astro.cookies.has("setup-preset")||!Astro.cookies.has("setup-edition"))return Astro.redirect("../welcome")
const lang = Astro.cookies.get("setup-lang")?.value
Astro.cookies.set("lang",lang!,{path:"/",maxAge:34550000})
Astro.cookies.set("registration","completed",{path:"/",maxAge:34550000})
return Astro.redirect("../")
//preset, edition
---

<Template title="Setup" className='bg-slate-200 dark:bg-slate-700 text-gray-800 dark:text-gray-100 overflow-hidden' transition={true} language={lang!} />