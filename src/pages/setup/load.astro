if(Astro.cookies.has("lang"))return Astro.redirect("../")
else if(!Astro.cookies.has("setup-lang")||!Astro.cookies.has("setup-preset")||!Astro.cookies.has("setup-edition"))return Astro.redirect("../welcome")
const lang = Astro.cookies.get("setup-lang")?.value
Astro.cookies.set("lang",lang!,{path:"/",maxAge:31536000})
return Astro.redirect("../")
