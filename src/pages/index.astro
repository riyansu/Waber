---
if(!Astro.cookies.has("lang"))return Astro.redirect("./welcome")
import HomeTemplate from '../templates/HomeTemplate.astro'
const lang = Astro.cookies.get("lang")?.value
const ja = lang==="ja"||lang==="ja-JP"
---

<HomeTemplate page="Home">
    <div class="w-full grid grid-cols-1 @tb:grid-cols-7">
        <div class="col-span-4 @tb:col-span-7 @hs:col-span-7 @lt:col-span-4 mr-0 @lt:mr-3 border-r border-solid">
            <div class="w-full mb-7">
                <div class="flex justify-center text-2xl mb-3">{ja ?"最近のプロジェクト":"Recent Projects"}
                <div class="hidden @hs:block @hs:ml-4"><button class="block w-2/3 @hs:w-full @hs:px-2 h-16 @hs:h-10 bg-blue-400 text-white text-xl rounded-md hover:opacity-80 duration-300 outline-none focus:opacity-80">{ja?"新規プロジェクト":"New Project"}</button></div> </div>
                <div class="flex justify-center text-2xl w-full h-[70svh] @hs:h-[56svh] bg-white/60 rounded">
                </div>
            </div>
            <div class="flex justify-center w-full @hs:hidden">
                <button class="block w-2/3 h-16 bg-blue-400 text-white text-xl rounded-md hover:opacity-80 duration-300 outline-none focus:opacity-80">
                {ja?"新規プロジェクト":"New Project"}
                </button>
            </div>
        </div>
        <div class="col-span-3 ml-1 @tb:ml-3 hidden @hs:hidden @lt:block">
            <div class="w-full">
                <div class="flex justify-center text-2xl mb-3">{ja?"最新ニュース":"Recent News"}</div>
                <div class="flex justify-center text-2xl w-full h-[84svh] bg-white/50"></div>
            </div>
        </div>
    </div>
</HomeTemplate>
