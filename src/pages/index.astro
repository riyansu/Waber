---
if(!Astro.cookies.has("lang"))return Astro.redirect("./welcome")
Astro.cookies.set("lang",Astro.cookies.get("lang")!.value,{path:"/",maxAge:31536000})
import App from '../layouts/App.astro'
---

<App className='bg-slate-200 dark:bg-slate-700 text-gray-800 dark:text-gray-50'>
    <div class="h-[100lvh] flex justify-center items-center">
        <div class="text-3xl @mb:text-5xl text-center">
            <div class="font-bold">
                Home
            </div>
            <div class="mt-5">
                Under Development.
            </div>
        </div>
    </div>
</App>
